{
  "metadata": [
    {
      "src": [
        {
          "cwd": "../../oqtane.framework",
          "files": [
            "**/*.csproj"
          ],
          "exclude": [
            "**/obj/**",
            "**/bin/**",
            "_site/**",
            "Comment: This next one excludes template projects which cause errors ",
            "**/Templates/External/**"
          ]
        }
      ],
      "dest": "obj/api",
      "filter": "filterConfig.yml",
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml"
        ],
        "cwd": "obj"
      },
      {
        "files": [
          "api/**.md",
          "articles/**.md",
          "**toc.yml",
          "*.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "layout/**",
          "articles/**.png",
          "articles/**.jpg",
          "articles/**.svg",
          "apidoc/**.png",
          "apidoc/**.jpg",
          "apidoc/**.svg"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md",
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "dest": "../docs",
    "template": [
      "default",
      "statictoc",
      "layout/oqtane"
    ],
    "globalMetadata": {
      "_appTitle": "Oqtane Docs - APIs and more for the Modular Blazor Application Framework",
      "_appLogoPath": "layout/images/logo-white-50.png",
      "_appFaviconPath": "layout/images/favicon.png",
      "_enableNewTab": true,
      "_enableSearch": true

    }
  }
}